function remove_story_location(loc_id,location)
	local sim = alife()
	if sim then
		local obj = sim:story_object(loc_id)
		if obj then
			for a = 1, level.map_has_object_spot(obj.id, location), 1 do
				level.map_remove_object_spot(obj.id, location)
			end
		end
	end
end
