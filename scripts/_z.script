function script_file_exists(file_name)
	local dir = "$game_scripts$"
	local f = getFS();
	local flist = f:file_list_open_ex(dir, bit_or(FS.FS_ListFiles,FS.FS_RootOnly), file_name)
	return flist:Size() > 0
end
