-- set this true to enable the feature, then add your favorites below
transfer_faves = false
tf_notify_sound = false

-- enable your favorites by removing the "--" from the front of a line
local favorites = {
-- "ammo_9x19_fmj",
-- "ammo_9x19_pbp",
-- "ammo_5.45x39_fmj",
-- "ammo_5.45x39_ap",
-- "ammo_5.56x45_ss190",
